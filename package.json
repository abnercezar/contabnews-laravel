{
    "private": true,
    "type": "module",
    "scripts": {
        "predev": "npm run test:back && npm run test:unit",
        "test:back": "php artisan test",
        "dev": "vite",
        "build": "vite build",
        "build:ssr": "vite build && vite build --ssr",
        "commit": "npx cz",
        "test": "npm run test:unit",
        "test:unit": "vitest run",
        "test:unit:watch": "vitest"
    },
    "dependencies": {
        "@heroicons/vue": "^2.2.0",
        "@inertiajs/vue3": "^2.0.9",
        "@tailwindcss/vite": "^4.0.0",
        "@vitejs/plugin-vue": "^5.2.4",
        "axios": "^1.7.4",
        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^1.2.0",
        "pinia": "^2.0.35",
        "tailwindcss": "^4.0.0",
        "viewerjs": "^1.11.7",
        "vite": "^6.0.11",
        "vue": "^3.5.13",
        "ziggy-js": "^2.5.2"
    },
    "devDependencies": {
        "commitizen": "^4.2.5",
        "cz-conventional-changelog": "^3.3.0",
        "vitest": "^4.0.13",
        "@vue/test-utils": "^2.4.6",
        "@testing-library/vue": "^6.0.0",
        "@testing-library/jest-dom": "^6.0.0",
        "jsdom": "^21.1.0"
    },
    "vitest": {
        "coverage": {
            "reporter": [
                "text",
                "lcov"
            ],
            "exclude": [
                "node_modules/"
            ]
        }
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
